@{
    ViewData["Title"] = "Post";
}
@model List<Movie.Models.Post.Posts>
<div class="container-fluid">
    <partial name="_Notification" />
    <div class="col-lg d-flex align-items-strech">
        <div class="card w-100">
            <div class="card-body">
                <div class="align-items-center justify-content-between">
                    <div class="row pt-4 pb-3">
                        <div class="col-6">
                            <h1 class="text-primary">
                                POST LIST
                            </h1>
                        </div>
                        <div class="col-6 text-end">
                            <a asp-controller="Post" asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Add new post
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg d-flex align-items-strech">
            <div class="card w-100">
                <div class="card-body">
                    <!--<div class="align-items-center justify-content-between mb-4">
                        <form asp-controller="Genre" asp-action="Index" method="get">
                            <span>
                                Title: <input class="form-control" type="text" name="SearchString" />
                                <input class="btn btn-warning" type="submit" value="Filter" />
                            </span>
                        </form>
                    </div>
                -->
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Thumbnail</th>
                                <th>Created</th>
                                <th>Updated</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td>@obj.Title</td>
                                    <td><img src="~/images/posts/@obj.Thumbnail" width="100" /></td>
                                    <td>@obj.Created</td>
                                    <td>@obj.Updated</td>
                                    <td>
                                    @if (@obj.Status == "Deactivate"){
                                        <span class="badge bg-warning rounded-3 fw-semibold">@obj.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success rounded-3 fw-semibold">@obj.Status</span>
                                    }
                                </td>
                                <td>
                                        <div class="d-flex">
                                            <a asp-controller="Post" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-info mx-2">Edit</a>
                                            <a asp-controller="Post" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
            </div>
        </div>
    </div>
</div>