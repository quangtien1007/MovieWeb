@{
    ViewData["Title"] = "Company";
}
@model List<Movie.Models.Company.Company>
<div class="container-fluid">
    <partial name="_Notification" />
    <div class="col-lg d-flex align-items-strech">
        <div class="card w-100">
            <div class="card-body">
                <div class="align-items-center justify-content-between">
                    <div class="row pt-4 pb-3">
                        <div class="col-6">
                            <h1 class="text-primary">
                                Company LIST
                            </h1>
                        </div>
                        <div class="col-6 text-end">
                            <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Add new Company
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg d-flex align-items-strech">
            <div class="card w-100">
                <div class="card-body">
                    <!--<div class="align-items-center justify-content-between mb-4">
                        <form asp-controller="Genre" asp-action="Index" method="get">
                            <span>
                                Title: <input class="form-control" type="text" name="SearchString" />
                                <input class="btn btn-warning" type="submit" value="Filter" />
                            </span>
                        </form>
                    </div>
                -->
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th width="30%">
                                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]">ID</a>
                                </th>
                                <th width="50%">
                                    <a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentFilter"]">Name</a>
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td>@obj.Id</td>
                                    <td>@obj.Name</td>
                                    <td>
                                        <div class="d-flex">
                                            <a asp-controller="Genre" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-info mx-2">Edit</a>
                                            <a asp-controller="Genre" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
            </div>
        </div>
    </div>
</div>