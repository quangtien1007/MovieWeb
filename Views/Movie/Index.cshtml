@{
    ViewData["Title"] = "Movie";
}
@model  List<Movie.Models.Movie.Movies>
<div class="container-fluid">
    <partial name="_Notification" />
    <div class="col-lg d-flex align-items-strech">
        <div class="card w-100">
            <div class="card-body">
                <div class="align-items-center justify-content-between">
                    <div class="row pt-4 pb-3">
                        <div class="col-6">
                            <h1 class="text-primary">
                                MOVIE LIST
                            </h1>
                        </div>
                        <div class="col-6 text-end">
                            <a asp-controller="Movie" asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Add new movie
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg d-flex align-items-strech">
            <div class="card w-100">
                <div class="card-body">
                    <!--<div class="align-items-center justify-content-between mb-4">
                        <form asp-controller="Genre" asp-action="Index" method="get">
                            <span>
                                Title: <input class="form-control" type="text" name="SearchString" />
                                <input class="btn btn-warning" type="submit" value="Filter" />
                            </span>
                        </form>
                    </div>
                -->
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]">ID</a>
                                </th>
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentFilter"]">Title</a>
                                </th>
                                <th>Image</th>
                                <th>ReleaseDate</th>
                                <th>Viewed</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td>@obj.Id</td>
                                    <td>@obj.Title</td>
                                    <td><img width="100" alt="" src="~/images/movies/@obj.Image" /></td>
                                    <td>@obj.ReleaseDate</td>
                                    <td>@obj.Viewed</td>
                                    <td>@if (@obj.Movie_Status == "Stop")
                                    {
                                        <span class="badge bg-warning rounded-3 fw-semibold">@obj.Movie_Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success rounded-3 fw-semibold">@obj.Movie_Status</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex">
                                            <a asp-controller="Movie" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-info mx-2">Edit</a>
                                            <a asp-controller="Movie" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
            </div>
        </div>
    </div>
</div>